<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:layout_marginLeft="5pt"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Departure city: "  />

        <Spinner
            android:id="@+id/departure_cities"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:entries="@array/departure_cities" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Arrival city: "  />

        <Spinner
            android:id="@+id/arrival_cities"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:entries="@array/arrival_cities" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Departure date: "  />

        <EditText
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:focusable="false"
            android:id="@+id/departure_date"
            android:onClick="onClick"/>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Arrival date: "  />

        <EditText
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:focusable="false"
            android:id="@+id/arrival_date"
            android:onClick="onClick"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Number of adults: "  />

        <EditText
            android:inputType="number"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:id="@+id/number_of_adults" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Number of children: "  />

        <EditText
            android:inputType="number"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:id="@+id/number_of_children" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Number of infants: "  />

        <EditText
            android:inputType="number"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:id="@+id/number_of_infants" />

    </LinearLayout>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Send" />

</LinearLayout>